---
layout: none
---
[
{% for element in site.pages %}{% comment %}
{% endcomment %}{% unless element.url == "/404.html" or element.url == "/search-map.json" or element.url contains "/news/" %}{% comment %}
{% endcomment %}  {
    "title": "{% if element.url == "/index.html" %}Home{% else %}{{ element.title }}{% endif %}",
    "content": "{{ element.content | strip_html | strip_newlines | remove: "	" | escape }}",
    "category": "{{ element.category }}",
    "tags": "{% for tag in element.tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}",
    "url": "{{ site.baseurl }}{{ element.url | remove: "index.html" }}",
    "date": "{{ element.date }}"
  },
{% endunless %}{% endfor %}{% for post in site.posts | limit: 20 %}  {
    "title": "{{ post.title }}",
    "content": "{{ post.content | strip_html | strip_newlines | remove: "	" | escape }}",
    "category": "{{ post.category }}",
    "tags": "{% for tag in post.tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}",
    "url": "{{ site.baseurl }}{{ post.url | remove: "index.html" }}",
    "date": "{{ post.date }}"
  },
{% endfor %}  {}
]
